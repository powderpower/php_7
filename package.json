{
  "name": "laravel_clean",
  "version": "1.0.0",
  "description": "laravel 5.4 with custom webpack",
  "author": "Powder Power",
  "license": "UNLICENSED",
  "scripts": {
    "build": "webpack --progress --hide-modules --mode=development",
    "watch": "webpack --progress --hide-modules --mode=development --watch",
    "prod": "webpack --progress --hide-modules -p",
    "test": "jest"
  },
  "devDependencies": {
    "css-loader": "^1.0.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "jest": "^23.6.0",
    "jquery": "^3.3.1",
    "node-sass": "^4.10.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  },
  "jest": {
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/resources/assets/js/components/$1"
    },
    "testMatch": [
      "<rootDir>/tests/Jest/*.js"
    ]
  }
}
